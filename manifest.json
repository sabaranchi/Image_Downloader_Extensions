{
  "manifest_version": 3,
  "name": "Image Downloader",
  "version": "1.0",
  "description": "Select and download images from the current page as a ZIP.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "downloads",
    "sidePanel",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>", "http://*/*", "https://*/*", "*://i.pximg.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Image Panel"
  },
  "side_panel": {
    "default_path": "panel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "pixiv-referer-fix",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}